<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/header" />


    <RelativeLayout
        android:id="@+id/lnLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_large"
        android:orientation="vertical">


        <ImageView

            android:layout_marginTop="100dp"
            android:id="@+id/img_logo"
            android:layout_width="@dimen/ptit_logo_size"
            android:layout_height="@dimen/ptit_logo_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_ptit" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_loading"
                android:layout_width="@dimen/square_button_small"
                android:layout_height="@dimen/square_button_small"
                android:src="@drawable/ic_loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Loading"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
